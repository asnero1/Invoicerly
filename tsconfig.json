{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
"paths": {
  "@/*": ["./app/*"],
  "@/components/*": ["./app/components/*"],
  "@/types": ["types"],
  "@/types/*": ["types/*"],
  "@/utils/*": ["./app/utils/*"],
  "@/data/*": ["./app/data/*"],
  "@/lib/*": ["./app/lib/*"]
},
    "typeRoots": [
      "./types",                // ✅ Custom global types (not `app/types`)
      "./node_modules/@types"  // ✅ Default type definitions
    ],
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "types/**/*.d.ts"
  ],
  "exclude": ["node_modules"]
}
