{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./app/*"],
      "@components/*": ["./app/components/*"],
      "@types": ["./app/types"],
      "@shared/*": ["./app/types/*"],
      "@/components/*": ["./app/components/*"],
      "@/types": ["./app/types"],
      "@/lib/*": ["./lib/*"]
    },
    "typeRoots": [
      "./types",                 // ✅ includes your custom types like jspdf-autotable
      "./node_modules/@types"   // ✅ default types
    ],
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "app/types/json.d.ts",
    "types/**/*.d.ts"           // ✅ explicitly includes your new types folder
  ],
  "exclude": ["node_modules"]
}
